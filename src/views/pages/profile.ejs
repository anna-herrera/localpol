<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

<header>
    <% include ../partials/header %>
</header>

<main class="container">
    <div class="container">
        <div class="row row-centered">
            <img src="<%= photoURL%>" class="img-circle" style="width: 150px; height: 150px;" alt=<%= data.name %> />
            <h2><%= data.name %></h2>
            <a href="mailto:<%= email %>"><%= email %></a>
        </div>
        <div class="row row-centered">
            <h4>Bio</h4>
            <p><%= data.bio %></p>
        </div>
        <div class="row row-centered">
            <h4>Platform</h4>
            <p><%= data.platform %></p>
        </div>
        <div class="row">
            <h4>Upcoming Elections</h4>
            <div class="list-group">
                <% for(var i in data.electionIds) { %>
                    <a href="/election/<%= data.electionIds[i].title%>" class="list-group-item"><%= data.electionIds[i].title %></a>
                <% } %>
            </div>
        </div>
    </div>
</main>


</body>
</html>