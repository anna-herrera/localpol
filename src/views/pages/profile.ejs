<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
    <div class="container">
        <div class="row row-centered">
            <img src="/anna.jpg" class="img-circle" style="width: 150px; height: 150px;" alt=<%= data.name %> />
            <h2><%= data.name %></h2>
        </div>
        <div class="row row-centered">
            <h4>Bio</h4>
            <p><%= data.bio %></p>
        </div>
        <div class="row">
            <h4>Upcoming Elections</h4>
            <div class="list-group">
                <% for(var i in data.electionIds) { %>
                    <% console.log(i); %>
                    <a href="/election/<%= data.electionIds[i]%>" class="list-group-item"><%= data.electionIds[i] %></a>
                <% } %>
            </div>
        </div>
        <div class="row">
            <h4>Platform</h4>
            <p><%= data.platform %></p>
        </div>
    </div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>